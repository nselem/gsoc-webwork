# Termochemistry problems: Two equations needed # 2
# H2O - 17.999
# A

SRAND($problemSeed);
$a = random(200, 2000)/10;
$b = random(20, 50);
$y = Real(($a*$b*4.184)/1000);
$z = Real(($a/17.999)*6.02);

# B
BEGIN_TEXT_ES
