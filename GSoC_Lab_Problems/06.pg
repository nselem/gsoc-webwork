$BR
\{
BeginTable(border => 1, tex_border => "1pt", spacing => 0, padding => 4).
AlignedRow(["De " . $b . ".0 \(^{\circ}C\) a 0.0 \(^{\circ}C\)", $y->ans_rule . " kJ"], align => LEFT, separation => 0).
AlignedRow(["Para congelar todo", $z->ans_rule . " kJ"], align => LEFT, separation => 0).
EndTable()
