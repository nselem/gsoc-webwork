$aa = random(1, 4)/20;
$b = random(2, 4);
$bb = random(1, 10)/100;
$c = random(1, 3);
$cc = random(1, 4)/100;
$d = random(1, 3);
$_w = ($d/$a)*$aa*1000;
$w = Real($_w);
$_x = ($d/$b)*$bb*1000;
$x = Real($_x);
$_y = ($d/$c)*$cc*1000;
$y = Real($_y);
$z = Real(($d*1000)-$_w-$_x-$_y);

